<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>com.atlassian.confluence.plugin.base</groupId>
        <artifactId>confluence-plugin-base</artifactId>
        <version>10</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.atlassian.confluence.plugins</groupId>
    <artifactId>confluence-jira3-plugin</artifactId>
    <version>2.8.1.3-SNAPSHOT</version>

    <name>JIRA Macros</name>
    <packaging>atlassian-plugin</packaging>

    <description>Macros to retrieve information from JIRA.</description>
    <url>http://confluence.atlassian.com/display/CONFEXT/JIRA+3+Plugin</url>

    <scm>
        <connection>scm:svn:https://svn.atlassian.com/svn/public/contrib/confluence/confluence-jira3-plugin/branches/confluence-jira3-plugin-2.8.1.x</connection>
        <developerConnection>scm:svn:https://svn.atlassian.com/svn/public/contrib/confluence/confluence-jira3-plugin/branches/confluence-jira3-plugin-2.8.1.x</developerConnection>
        <url>http://svn.atlassian.com/fisheye/browse/public/contrib/confluence/confluence-jira3-plugin/branches/confluence-jira3-plugin-2.8.1.x</url>
    </scm>

    <properties>
        <atlassian.plugin.key>confluence.extra.jira</atlassian.plugin.key>

        <atlassian.pdk.server.url>http://localhost:8080/confluence</atlassian.pdk.server.url>
        <atlassian.pdk.server.username>admin</atlassian.pdk.server.username>
        <atlassian.pdk.server.password>admin</atlassian.pdk.server.password>

        <atlassian.product.version>2.8.2</atlassian.product.version>
        <atlassian.product.data.version>2.8.1</atlassian.product.data.version>
    	<tomcat.installer.url>https://m2proxy.atlassian.com/repository/internal/org/apache/tomcat/apache-tomcat/5.5.23/apache-tomcat-5.5.23-jdk14.zip</tomcat.installer.url>
    </properties>

    <dependencies>
        <!-- for some reason maven resolves this one with scope test -->
        <dependency>
            <groupId>com.atlassian.cache</groupId>
            <artifactId>atlassian-cache-api</artifactId>
            <version>0.1</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.atlassian.cache</groupId>
            <artifactId>atlassian-cache-memory</artifactId>
            <version>0.1</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>atlassian-plugin.xml</include>
                </includes>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>false</filtering>
                <excludes>
                    <exclude>atlassian-plugin.xml</exclude>
                </excludes>
            </resource>
        </resources>
    </build>
</project>
