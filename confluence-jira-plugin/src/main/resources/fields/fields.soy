{namespace jiraIntegration.templates.fields}
    
/**
 * @param jiraType
 * @param labelText
 * @param name
 * @param? value
 * @param? isRequired
 * @param? extraClasses
 * @param? errorTexts
 */
{template .stringField}
    {call aui.form.textField}
        {param labelContent}{$labelText}{/param}
        {param name: $name /}
        {param value: $value /}
        {param isRequired: $isRequired /}
        {param extraClasses: 'jira-field' + ($extraClasses ? ' ' + $extraClasses : '') /}
        {param extraAttributes: ['data-jira-type':$jiraType] /}
        {param errorTexts: $errorTexts /}
    {/call}
{/template}

/**
 * @param jiraType
 * @param labelText
 * @param name
 * @param? value
 * @param? isRequired
 * @param? extraClasses
 * @param? errorTexts
 */
{template .textareaField}
    <div class="field-group jira-field{if $extraClasses} {$extraClasses}{/if}" data-jira-type="{$jiraType}">
        <label for="{$name}">
            {$labelText}
            {if $isRequired}
                <span class="aui-icon icon-required"></span>
            {/if}
        </label>
        <textarea rows="10" id="{$name}" name="{$name}" class="textarea long-field">{$value}</textarea>
        {if $errorTexts}
            {foreach $error in $errorTexts}
                <div class="error">{$error}</div>
            {/foreach}
        {/if}
    </div>
{/template}

