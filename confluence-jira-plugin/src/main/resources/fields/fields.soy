/**
 * @param jiraType
 * @param labelText
 * @param name
 * @param options
 * @param? isMultiple
 * @param? isRequired
 * @param? extraClasses
 * @param? errorTexts
 */
{template .allowedValuesField}
    {if length($options)}
        {call aui.form.selectField}
            {param id: $name /}
            {param name: $name /}
            {param labelContent}{$labelText}{/param}
            {param options: $options /}
            {param isRequired: $isRequired /}
            {param isMultiple: $isMultiple /}
            {param extraClasses: 'jira-field' + ($extraClasses ? ' ' + $extraClasses : '') /}
            {param extraAttributes: ['data-jira-type':$jiraType] /}
            {param errorTexts: $errorTexts /}
        {/call}
    {else}
        {call aui.form.valueField}
            {param id: $name /}
            {param name: $name /}
            {param labelContent}{$labelText}{/param}
            {param value: getText('fields.allowedvalues.none') /}
            {param isRequired: $isRequired /}
            {param extraClasses: 'jira-field' + ($extraClasses ? ' ' + $extraClasses : '') /}
            {param extraAttributes: ['data-jira-type':$jiraType] /}
            {param errorTexts: $errorTexts /}
        {/call}
    {/if}
{/template}


