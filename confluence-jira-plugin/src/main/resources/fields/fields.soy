/**
 * @param labelText
 * @param reasonContent
 * @param? isRequired
 * @param? extraClasses
 * @param? errorTexts
 */
{template .unrenderableTypeField}
    <div class="field-group jira-field jira-field-unrenderable{if $extraClasses} {$extraClasses}{/if}">
        <label>
            {$labelText}
            {if $isRequired}
                <span class="aui-icon icon-required"></span>
            {/if}
        </label>
        {call aui.form.value}
            {param content: $reasonContent /}
        {/call}
        {if $errorTexts}
            {foreach $error in $errorTexts}
                <div class="error">{$error}</div>
            {/foreach}
        {/if}
    </div>
{/template}