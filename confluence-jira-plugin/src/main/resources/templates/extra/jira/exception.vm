#if($issueType == "SINGLE")
    <span class="aui-message aui-message-error jim-error-message-single">
        #if($clickableUrl) <a href="$clickableUrl">$jiraLinkText</a> -#end $exceptionMessage
    </span>
#else
    <div class="aui-message warning jim-inline-block jim-error-message-table">
        <span class="aui-icon icon-warning"></span>$macroName: $exceptionMessage  #if($clickableUrl) <a href="$clickableUrl">$jiraLinkText</a> #end
    </div>
#end