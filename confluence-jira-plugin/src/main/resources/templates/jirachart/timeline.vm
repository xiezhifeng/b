<div class="jira-timeline" datasource="$id"></div>
<script type="text/javascript">
    window.$id = {
        data: [
            #set($startDateId = "")
            #foreach($item in $entries)
                #set($html = $xmlXformer.getJsonIssue($item, $group))
                #if ($xmlXformer.getStartDateID($item) != "")
                    #set($startDateId = $xmlXformer.getStartDateID($item))
                #end

                $html,
            #end
            {}
        ],
        options: {
            width: '$width',
            height: '$height',
            versions: '$versions',
            startDateId: '$startDateId',
            group: '$group'
        }
    }
</script>