            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>1.3</version>
                <executions>
                    <execution>
                        <id>add-test-resource</id>
                        <phase>generate-test-sources</phase>
                        <goals>
                            <goal>add-test-resource</goal>
                        </goals>
                        <configuration>
                            <resources>
                                <resource>
                                    <directory>src/main/resources</directory>
                                    <!--
                                    <excludes>
                                      <exclude>**/folder-to-exclude/**</exclude>
                                    </excludes>
                                     -->
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <properties>
        <od.testing.configuration>
            retrieve-effective-pom
            include-artifact,self
            use-maven,2
            set-categories,on-trigger="com.atlassian.jira:jira-ondemand-webapp",categories="SUITE"
        </od.testing.configuration>
    </properties>
</project>
